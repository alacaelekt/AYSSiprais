<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor1"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonlines"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ayarlar"
            android:id="@+id/textView12"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/textcolor1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:onClick="saveEvent">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="30dp"
                    android:text="Kaydet"
                    android:gravity="right"
                    android:layout_marginTop="11dp"
                    android:textColor="@color/textcolor1"/>
                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:background="@android:color/transparent"
                    android:src="@drawable/savebutton"
                    android:onClick="saveEvent"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Firma - Şube No"
                android:id="@+id/text_firmano_ayarlar"
                android:textSize="24dp"
                android:width="150dp" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_firmano_ayarlar"
                android:layout_marginLeft="5dp"
                android:selectAllOnFocus="true"
                android:inputType="numberDecimal"
                android:singleLine="true"/>

            <EditText
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_subeno_ayarlar"
                android:layout_marginLeft="5dp"
                android:selectAllOnFocus="true"
                android:inputType="numberDecimal"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Depolar"
                android:id="@+id/text_depolar_ayarlar"
                android:textSize="24dp"
                android:width="150dp" />

            <EditText
                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_depolar_ayarlar"
                android:layout_marginLeft="5dp"
                android:editable="false"
                android:singleLine="true"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="\?"
                android:id="@+id/button_depolar_ayarlar"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:background="@drawable/buttonlines"
                android:onClick="depolarEvent"
                android:textColor="@color/textcolor1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Evrak Depo"
                android:id="@+id/text_evrakdepo_ayarlar"
                android:textSize="24dp"
                android:width="150dp" />

            <EditText
                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_evrakdepo_ayarlar"
                android:layout_marginLeft="5dp"
                android:editable="false"
                android:singleLine="true"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="\?"
                android:id="@+id/button_evrakdepo_ayarlar"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:background="@drawable/buttonlines"
                android:onClick="evrakdepoEvent"
                android:textColor="@color/textcolor1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sipariş Seri No"
                android:id="@+id/text_sip_evrakno_seri_ayarlar"
                android:textSize="24dp"
                android:width="150dp" />

            <EditText
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_sip_evrakno_seri_ayarlar"
                android:layout_marginLeft="5dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Kayıt Maili"
                android:id="@+id/text_evrakmail_ayarlar"
                android:textSize="24dp"
                android:width="150dp" />

            <Switch
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/switch_evrakmail_ayarlar" />

            <EditText
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_evrakmail_ayarlar"
                android:layout_marginLeft="5dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
