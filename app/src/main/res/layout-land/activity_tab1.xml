<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backcolor1"
    android:paddingLeft="50dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Evrak No"
            android:id="@+id/text_evrakno_tab1"
            android:textSize="24dp"
            android:width="150dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_evrakno_tab1"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />
        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edit_evrakno_sira_tab1"
            android:singleLine="true" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Belge No"
            android:id="@+id/text_belgeno_tab1"
            android:textSize="24dp"
            android:width="150dp" />

        <EditText
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_belgeno_tab1"
            android:selectAllOnFocus="true"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tarih"
            android:id="@+id/text_tarih_tab1"
            android:textSize="24dp"
            android:width="150dp" />

        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/edit_tarih_tab1"
            android:focusable="false" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edit_saat_tab1"
            android:focusable="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Teslim Tarihi"
            android:id="@+id/text_teslimtarih_tab1"
            android:textSize="24dp"
            android:width="150dp" />

        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/edit_teslimtarih_tab1"
            android:focusable="false" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edit_teslimsaat_tab1"
            android:focusable="false" />

    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cari Ãœnvan"
        android:id="@+id/text_carikodu_tab1"
        android:textSize="24dp"
        android:width="150dp" />

    <EditText
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_carikodu_tab1"
        android:layout_marginLeft="5dp"
        android:editable="false"
        android:singleLine="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="\?"
        android:id="@+id/button_carikodu_tab1"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:background="@drawable/buttonlines"
        android:onClick="carikoduEvent"
        android:textColor="@color/textcolor1" />

</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Adres No"
            android:id="@+id/text_adresno_tab1"
            android:textSize="24dp"
            android:width="150dp" />

        <EditText
            android:layout_width="650dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_adresno_tab1"
            android:layout_marginLeft="5dp"
            android:editable="false"
            android:singleLine="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="\?"
            android:id="@+id/button_adresno_tab1"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:background="@drawable/buttonlines"
            android:onClick="adresnoEvent"
            android:textColor="@color/textcolor1" />

    </LinearLayout>

</LinearLayout>